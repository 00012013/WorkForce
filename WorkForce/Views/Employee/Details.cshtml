@model WorkForce.Models.Employee

@{
    ViewBag.Title = "Details";
}

<style>
    .details-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .details-table {
        width: 100%;
        border-collapse: collapse;
    }

        .details-table th, .details-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .details-table th {
            background-color: #f2f2f2;
        }

    .btn {
        display: inline-block;
        padding: 6px 12px;
        margin-bottom: 0;
        font-size: 14px;
        font-weight: 400;
        line-height: 1.42857143;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        cursor: pointer;
        border: 1px solid transparent;
        border-radius: 4px;
    }

    .btn-primary {
        color: #fff;
        background-color: #337ab7;
        border-color: #2e6da4;
    }

    .btn-info {
        color: #fff;
        background-color: #5bc0de;
        border-color: #46b8da;
    }

    .btn-danger {
        color: #fff;
        background-color: #d9534f;
        border-color: #d43f3a;
    }
</style>


<div class="details-container">
    <table class="details-table">
        <h2>Employee Details</h2>
    
        <tr>
            <th>Name</th>
            <td>@Html.DisplayFor(model => model.Name)</td>
        </tr>
        <tr>
            <th>Age</th>
            <td>@Html.DisplayFor(model => model.Age)</td>
        </tr>
        <tr>
            <th>Department</th>
            <td>@Html.DisplayFor(model => model.Department.Name)</td>
        </tr>
    </table>

    <p>
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">Edit</a>
        <a href="@Url.Action("Index")" class="btn btn-info">Back to List</a>
    </p>
</div>
